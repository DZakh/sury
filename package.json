    "c8": "7.12.0",
    "rescript": "11.1.0",
    "rescript-stdlib-vendorer": "1.1.0",
    "sury": "link:",
    "ts-expect": "1.3.0",
    "tsimp": "2.0.12",
    "typescript": "4.9.3",
    "valibot": "1.0.0",
    "zod": "4.0.0-beta.20250420T053007",
    "@sinclair/typebox": "0.34.33"
  },
  "peerDependencies": {
    "rescript": "11.x"
  },
  "peerDependenciesMeta": {
    "rescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.0.5"
